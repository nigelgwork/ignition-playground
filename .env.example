# ========================================
# Ignition Automation Toolkit - Configuration
# ========================================
# Copy this file to .env and configure for your environment
# cp .env.example .env

# ========================================
# API Server Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=5000  # Default port for web UI and API
API_WORKERS=1
ENVIRONMENT=development

# ========================================
# API Security
# ========================================
# Disable API authentication (ONLY for localhost-only deployments)
# For network deployment, keep this false or unset for security
# DISABLE_API_AUTH=false

# Override API key (optional - auto-generated if not set)
# API key is stored in ~/.ignition-toolkit/api.key
# IGNITION_TOOLKIT_API_KEY=your-api-key-here

# ========================================
# Credential Vault Configuration
# ========================================
# Path to credential vault (default: ~/.ignition-toolkit/)
# CREDENTIAL_VAULT_PATH=~/.ignition-toolkit/

# ========================================
# AI Integration (Optional)
# ========================================
# Anthropic API key for AI-assisted steps
# ANTHROPIC_API_KEY=your-api-key-here
# CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Claude CLI command for embedded terminal
# Auto-detects: claude-code, claude-work, claude, claude-personal
# Override if you use a different command name:
# CLAUDE_CLI_COMMAND=claude-work

# ========================================
# Browser Automation
# ========================================
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_TIMEOUT=30000

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# Data Storage
# ========================================
# SQLite database path (default: ./data/toolkit.db)
# DATABASE_PATH=./data/toolkit.db

# Playbooks directory (default: ./playbooks)
# PLAYBOOKS_DIR=./playbooks

# Screenshots and artifacts directory
# ARTIFACTS_DIR=./data/artifacts

# ========================================
# Filesystem Browsing (Security)
# ========================================
# Allowed paths for filesystem browser API (colon-separated)
# Default: Only ./data/ directory for security
# WARNING: Granting access to /home or system directories is a security risk!
#
# Examples:
# FILESYSTEM_ALLOWED_PATHS=./data
# FILESYSTEM_ALLOWED_PATHS=./data:/opt/ignition-modules
#
# NEVER use broad paths like /home, /mnt/c, or /root
# FILESYSTEM_ALLOWED_PATHS=./data
